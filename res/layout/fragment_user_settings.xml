<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/User"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#97af0d"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView_Settings_User"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="22dp"
        android:text="Test version" />

    <AutoCompleteTextView
        android:id="@+id/AutoComp_Settings_Username"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Username" />
    
     <AutoCompleteTextView
         android:id="@+id/AutoComp_Settings_Email"
         android:layout_width="272dp"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:layout_marginTop="30dp"
         android:ems="10"
         android:hint="email" />
     
     <AutoCompleteTextView
         android:id="@+id/AutoComp_Settings_Phone"
         android:layout_width="275dp"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:layout_marginTop="30dp"
         android:ems="10"
         android:hint="phone" />

    <Button
        android:id="@+id/button_Settings_UserSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"
        android:layout_marginTop="50dp"
        android:text="Save" />

</LinearLayout>