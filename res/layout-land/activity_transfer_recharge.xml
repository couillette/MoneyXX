<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Banking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fa9a2e"
    android:orientation="vertical" >

    <Button
        android:id="@+id/buton_TransRec_RechargeRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="20dp"
        android:onClick="onClick"
        android:text="Recharge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_TransRec_TransferRequest"
        android:layout_alignLeft="@+id/buton_TransRec_RechargeRequest"
        android:layout_below="@+id/editText_TransRec_AmountOfMoney"
        android:layout_toLeftOf="@+id/image_TransRec_money_bill"
        android:text="Here you can choose to recharge your MoneyXX account or you can choose to transfer Money from your MoneyXX account to the Bank account you have saved on MoneyXX." />

    <ImageView
        android:id="@+id/image_TransRec_money_bill"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_money_bill2" />

    <Button
        android:id="@+id/button_TransRec_TransferRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView2"
        android:onClick="onClick"
        android:text="Transfer" />

    <EditText
        android:id="@+id/editText_TransRec_AmountOfMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView2"
        android:background="#fa9a2e"
        android:ems="1"
        android:gravity="center"
        android:inputType="number"
        android:text="100"
        android:textColor="@color/blank"
        android:textSize="120sp" />
    
</RelativeLayout>
