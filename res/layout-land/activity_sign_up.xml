<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout_SignUP"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/textView_singup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="SignUp"
        android:textColor="@color/blank"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/editText_Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_Password"
        android:layout_below="@+id/textView_singup"
        android:layout_marginTop="29dp"
        android:background="@color/pastelGreen"
        android:ems="10"
        android:hint="Username* (REQUIRED)"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText_Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_Email"
        android:layout_below="@+id/editText_Email"
        android:layout_marginTop="14dp"
        android:background="@color/pastelGreen"
        android:ems="10"
        android:hint="phone* (REQUIRED)"
        android:inputType="phone" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editText_Password"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="18dp"
        android:background="@color/pastelGreen"
        android:ems="10"
        android:hint="email* (REQUIRED)"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editText_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_Email"
        android:layout_centerVertical="true"
        android:background="@color/pastelGreen"
        android:ems="10"
        android:hint="password* (REQUIRED)"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button_SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText_Phone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="71dp"
        android:onClick="onClick"
        android:text="SignUp" />

</RelativeLayout>